dkim_key(
    'example.org',
    'dkim',
    '/certs/amavis/dkim/example.org.dkim.pem'
);


@dkim_signature_options_bysender_maps = (
    {
        "example.org" => {
            d   => 'example.org',
            a   => 'rsa-sha256',
            ttl => 10*24*3600
        }
    }
);

$enable_dkim_signing = 1;

$interface_policy{'10023'} = 'SUBMISSION';

$policy_bank{'SUBMISSION'} = {
    originating => 1,
    smtpd_discard_ehlo_keywords => ['8BITMIME']
};
